<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='gwt4touch2_kitchensink'>
	<inherits name='com.google.gwt.user.UserAgent' />
	<inherits name='com.google.gwt.user.User' />
	<inherits name="com.google.gwt.activity.Activity" />
    <inherits name="com.google.gwt.logging.Logging" />
    <inherits name='com.google.web.bindery.autobean.AutoBean' />
	<inherits name="com.emitrom.gwt4.touch.Touch4j" />
	<inherits name='com.emitrom.platform.maps.Maps' />
	<inherits name='com.emitrom.platform.device.Device' />
    <inherits name='com.emitrom.gwt4.touch.charts.Charts' />
    <inherits name='com.emitrom.gwt4.touch.ux.grid.Grid' />
    <inherits name='com.emitrom.gwt4.touch.ux.dataview.pullrefresh.PullRefresh' />
    <inherits name="com.emitrom.gwt4.touch.ux.rating.Rating" />
    	
	<set-property name="gwt.logging.popupHandler" value="DISABLED" />
	<set-property name="gwt.logging.logLevel" value="SEVERE" />
	<set-property name="gwt.logging.enabled" value="TRUE" />
	<set-property name="gwt.logging.consoleHandler" value="ENABLED" />
	<set-property name="gwt.logging.systemHandler" value="ENABLED" />

	<set-property name="user.agent" value="safari" />

	<!-- Specify the app entry point class. -->
	<entry-point class='com.emitrom.gwt4.touch2.demo.client.KitchenSinkEntryPoint' />

	<!-- Use ClientFactoryImpl by default -->
	<replace-with class="com.emitrom.gwt4.touch2.demo.client.core.ClientFactoryImpl">
		<when-type-is class="com.emitrom.gwt4.touch2.demo.client.core.ClientFactory" />
	</replace-with>

	<!-- Specify the paths for translatable code -->
	<source path='client' />
	<source path='shared' />

</module>
